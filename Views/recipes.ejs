        <script>
            document.onload = function () {
                function createCard(cardData) {
                    var cardTemplate = [
                        '<div class="card">',
                        '<p>My name is: ',
                        cardData.Name || 'No name provided',
                        '</p>',
                        '<p>My job is: ',
                        cardData.Job || 'No job provided',
                        '</p></div>'
                    ];

                    // a jQuery node
                    return $(cardTemplate.join(''));
                }
            };
            var urlParams = new URLSearchParams(window.location.search);
            console.log(urlParams.has('search')); // true
            if (urlParams.has('search')) {
                var query = urlParams.get('search')

                console.log(query)

                $.ajax({
                    type: "POST",
                    url: "/index/search",
                    data: {
                        search: query
                    },
                    success: function (result) {

                        //populate page using jqury
                        console.log(result)
                    }
                });
            }

            var cards = $();
            // Store all the card nodes
            result.forEach(function (item, i) {
                cards = cards.add(createCard(item));
            });

            // Add them to the page... for instance the <body>
            $(function () {
                $('body').append(cards);
            });
